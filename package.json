{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do https://www.tabnews.com.br para o https://curso.dev",
  "repository": "https://github.com/diasjoaovitor/clone-tabnews.git",
  "author": "João Vitor <jvitordiass@outlook.com.br>",
  "license": "MIT",
  "scripts": {
    "dev": "./init-dev.sh",
    "build": "next build",
    "start": "next start",
    "services:up": "docker compose -f src/infra/compose.yml up -d",
    "services:stop": "docker compose -f src/infra/compose.yml stop",
    "services:down": "docker compose -f src/infra/compose.yml down",
    "lint": "next lint",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --runInBand",
    "generate": "plop --plopfile generators/plopfile.js",
    "migration:create": "node-pg-migrate -m src/infra/migrations create",
    "migration:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up"
  },
  "dependencies": {
    "next": "^14.2.2",
    "pg": "^8.11.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.11.5",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "eslint": "^8",
    "eslint-config-next": "^14.2.2",
    "eslint-config-prettier": "^9.1.0",
    "git-commit-msg-linter": "^5.0.7",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "node-pg-migrate": "^7.3.2",
    "plop": "^4.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
